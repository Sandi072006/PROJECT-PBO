<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.penilaian_mahasiswa.MataKuliahController" spacing="10" style="-fx-padding: 20;">
    
    <!-- Header dengan tombol kembali -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="â† Kembali" onAction="#kembali" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Label text="Kelola Data Mata Kuliah" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </HBox>
    
    <!-- Form Input -->
    <TextField fx:id="idMatkulField" promptText="ID Mata Kuliah"/>
    <TextField fx:id="namaMatkulField" promptText="Nama Mata Kuliah"/>
    <TextField fx:id="sksField" promptText="SKS"/>
    <TextField fx:id="persentaseAbsensiField" promptText="Persentase Absensi"/>
    <TextField fx:id="persentaseTugasField" promptText="Persentase Tugas"/>
    <TextField fx:id="persentaseQuizField" promptText="Persentase Quiz"/>
    <TextField fx:id="persentaseUtsField" promptText="Persentase UTS"/>
    <TextField fx:id="persentaseUasField" promptText="Persentase UAS"/>
    <TextField fx:id="persentaseResponsiField" promptText="Persentase Responsi (Opsional)"/>
    
    <!-- Tombol Aksi -->
    <HBox spacing="10">
        <Button text="Tambah Mata Kuliah" onAction="#saveMataKuliah" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
    
    <!-- Tabel -->
    <TableView fx:id="mataKuliahTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idMatkulColumn" text="ID Mata Kuliah" prefWidth="150" />
            <TableColumn fx:id="namaMatkulColumn" text="Nama Mata Kuliah" prefWidth="250" />
            <TableColumn fx:id="sksColumn" text="SKS" prefWidth="100" />
        </columns>
    </TableView>
</VBox>
